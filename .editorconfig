################################################################################
#                             Editor Configuration                             #
#                                                                              #
# This file controls behavior in conformant editors with respect to some       #
# common baseline settings.                                                    #
################################################################################

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Justfile]
indent_size = 8
indent_style = tab

[*.md]
indent_size = 2
indent_style = space

[*.rs]
indent_size = 4
indent_style = tab

[*.toml]
indent_size = 8
indent_style = tab
